{
  "manifest_version": 2,
  "name": "VIQRC Rapid Relay Scoring",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_security_policy": {
    "script-src": "'self' 'unsafe-inline'",  // Allows inline scripts
    "object-src": "'self'"
  }
}
